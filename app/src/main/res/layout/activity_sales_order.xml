<?xml version="1.0" encoding="utf-8"?>





<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="go.id.kominfo.ACTIVITY.SalesOrderActivity">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swDataPesanan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA PESANAN"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorDarkPurple"
            android:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btnAllPesananFilter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ALL"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/btnTerimaPesananFilter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Terima"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/btnTolakPesananFilter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tolak"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/btnProsesPesananFilter"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Proses"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/btnSelesaiPesananFilter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Selesai"
                        android:textSize="10dp" />

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_data_pesanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_data_pesanan_detail">

                </android.support.v7.widget.RecyclerView>

                <!--<Button-->
                    <!--android:id="@+id/btn_proses_semua"-->
                    <!--android:layout_width="200dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="16dp"-->
                    <!--android:background="@drawable/kotak_ungu"-->
                    <!--android:fontFamily="@font/calibri"-->
                    <!--android:text="PROSES SEMUA"-->
                    <!--android:textColor="@color/colorWhite"-->
                    <!--android:textSize="16sp"-->
                    <!--android:textStyle="bold" />-->

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>